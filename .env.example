# ============================================================================
# Portfolio Tracker - Environment Variables
# ============================================================================
#
# Copia este archivo a .env y modifica según tus necesidades
#
# Comando: cp .env.example .env (Linux/Mac) o copy .env.example .env (Windows)
#
# ============================================================================

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================

APP_NAME=Portfolio Tracker API
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# ============================================================================
# API CONFIGURATION
# ============================================================================

API_V1_PREFIX=/api/v1
HOST=0.0.0.0
PORT=8000

# ============================================================================
# DATABASE
# ============================================================================

# SQLite (Default - Recomendado para desarrollo)
DATABASE_URL=sqlite+aiosqlite:///./portfolio_tracker.db

# PostgreSQL (Opcional - Para producción)
# DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/portfolio_tracker

DATABASE_ECHO=False

# ============================================================================
# CORS (Cross-Origin Resource Sharing)
# ============================================================================

CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# ============================================================================
# PRICE FETCHER CONFIGURATION
# ============================================================================

# Intervalo de actualización (horas)
PRICE_FETCH_INTERVAL_HOURS=1

# Habilitar/deshabilitar price fetcher
PRICE_FETCH_ENABLED=True

# Fetch prices al iniciar la aplicación
PRICE_FETCH_ON_STARTUP=True

# ============================================================================
# API RATE LIMITS
# ============================================================================

# Yahoo Finance: 2000 requests/hora (gratis)
YAHOO_FINANCE_RATE_LIMIT=2000

# CoinGecko: 50 requests/minuto (gratis)
COINGECKO_RATE_LIMIT=50

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================

# TTL del cache de precios (segundos)
PRICE_CACHE_TTL_SECONDS=3600

# ============================================================================
# LOGGING
# ============================================================================

# Niveles: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Formato: json o console
LOG_FORMAT=console

# ============================================================================
# EXTERNAL APIs (Opcional)
# ============================================================================

# CoinGecko API Key (Opcional - Para rate limits más altos)
# Obtener en: https://www.coingecko.com/en/api/pricing
# COINGECKO_API_KEY=your_api_key_here

# Alpha Vantage API Key (Opcional - Alternativa a Yahoo Finance)
# Obtener en: https://www.alphavantage.co/support/#api-key
# ALPHA_VANTAGE_API_KEY=your_api_key_here

# ============================================================================
# SECURITY
# ============================================================================

# Secret key para JWT tokens y encriptación
# IMPORTANTE: Cambiar en producción
# Generar con: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_OPENSSL_RAND_HEX_32

# Expiración de tokens (minutos)
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# ============================================================================
# DATA RETENTION
# ============================================================================

# Retención de histórico de precios (días)
PRICE_HISTORY_RETENTION_DAYS=1825

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Mostrar SQL queries en consola (solo dev)
# DATABASE_ECHO=True

# Habilitar CORS para todos los orígenes (NUNCA EN PRODUCCIÓN)
# CORS_ORIGINS=["*"]
